{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@ability/*": ["src/ability/*"],
      "@pokemon-move/*": ["src/pokemon-move/*"],
      "@pokemon-move-detail/*": ["src/pokemon-move-details/*"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
