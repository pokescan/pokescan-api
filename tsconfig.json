{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "paths": {
      "@ability/*": ["src/ability/*"],
      "@egg-group/*": ["src/egg-group/*"],
      "@pokemon-move/*": ["src/pokemon-move/*"],
      "@pokemon-move-detail/*": ["src/pokemon-move-detail/*"],
      "@game-version/*": ["src/game-version/*"],
      "@generation/*": ["src/generation/*"],
      "@location/*": ["src/location/*"],
      "@region/*": ["src/region/*"],
      "@pokemon/*": ["src/pokemon/*"],
      "@pokemon-stat/*": ["src/pokemon-stat/*"],
      "@pokemon-type/*": ["src/pokemon-type/*"],
      "@pokemon-encounter/*": ["src/pokemon-encounter/*"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
