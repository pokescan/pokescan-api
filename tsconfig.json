{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@ability/*": ["src/ability/*"],
      "@generation/*": ["src/generation/*"],
      "@location/*": ["src/location/*"],
      "@region/*": ["src/region/*"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
